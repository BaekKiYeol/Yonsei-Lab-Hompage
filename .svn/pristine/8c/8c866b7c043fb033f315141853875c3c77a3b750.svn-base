@charset "utf-8";

/* 방문자 집계 */
#visit {position:relative; display: inline-block;}
#visit .btn_admin {
    position: absolute;
    top: -30px;
    left: -9px;
    height: 25px;
    line-height: 25px;
    padding: 0 5px;
    border-radius: 3px;
}
#visit h2 {font-size:1.2em;margin-bottom:20px;text-align:left;color:#fff;position:relative}
#visit dl {padding:10px 0}
#visit dl:after {display:block;visibility:hidden;clear:both;content:""}
#visit dt {float:left;width:50%;text-align:left;line-height:23px;height:23px;color:#000}
#visit dd {float:left;width:50%;padding:0 5px;text-align:right;text-align:right;font-weight:bold;line-height:23px;height:23px;font-size:0.92em}
#visit dd strong {display:inline-block;padding:0 5px;border-radius:20px;line-height:15px;color:#000}
.visit_info {
    position: absolute;
    top: -100px;
    left: 0;
}