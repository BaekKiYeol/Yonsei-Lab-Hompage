@charset "UTF-8";

/* common */
body, html, a, p {font-family: 'SUIT', sans-serif;}
section {max-width: 1240px; margin: 0 auto !important;}
/*Research*/
/*section1*/
.rsch-list {
    display: flex;
    flex-direction: column;
    max-width: 1240px;
    text-align: center;
    align-items: center;
    justify-content: center;
    background: #F7F7F7;
    border-bottom: 1px solid #E4E4E4;
    margin: 0 auto;
    padding: 20px;
    margin-bottom: 50px;
}
.rsch-list ul {
    display: flex;
    flex-wrap: wrap;
}
.rsch-list ul + ul {
    padding-top: 15px;
}
.rsch-list ul li {
    display: flex;
    text-align: center;
    align-items: center;
}
.rsch-list ul li button {
    font-size: 18px;
    font-weight: 700;
    color: #BABABA;
    text-transform: uppercase;
}
.rsch-list ul li .line {
    border-left: 0.15em solid #BABABA;
    height: 20px;
    margin-top: 2px;
    margin-left: 30px;
    margin-right: 25px;
}
.sec1-top {
    display: flex;
    justify-content: space-between;
}
.sec1-top img {
    width: 100%;
    max-width: 400px;
    height: 100%;
    max-height: 336px;
}
.sec1-top ul {
    width: 60%;
    margin-left: 50px;
    letter-spacing: -1px;
}
.sec1-top ul li {
    font-size: 18px;
    line-height: 1.3;
}
.sec1-top ul li + li {
    padding-top: 60px;
}
.txt2_ {
    display: none;
}
.sec1-bottom {
    margin-top: 50px;
    overflow: auto;
}

/*section2*/
.sec2-top img {
    display: flex;
    margin: 0 auto;
    width: 100%;
    height: 100%;
    max-width: 900px;
    max-height: 600px;
}
.sec2-bottom {
    max-width: 900px;
    margin: 0 auto;
    font-size: 18px;
}
.sec2-bottom .sec2-txt {
    margin-top: 50px;
    margin-bottom: 40px;
}

/*section3*/
.sec3-top p, .sec3-middle p, .sec3-bottom p {
    margin: 0 auto;
    max-width: 1020px;
}
.section3 img {
    display: flex;
    margin: 0 auto;
    width: 100%;
    height: 100%;
    max-width: 1020px;
    max-height: 550px;
}
.sec3-top p {
    padding-bottom: 40px;
}
.sec3-middle p {
    padding: 40px 0;
}

.sec3-bottom p {
    padding-top: 40px;
}

/*section4*/
.section4 img {
    display: flex;
    margin: 0 auto;
}
.section4 .black-bg {
    display: flex;
    align-items: center;
    min-height: 379px;
    background: #000;
}
.section4 ul {
    display: flex;
    max-width: 1240px;
    margin: 0 -10px;
}
.section4 ul li {
    padding: 0 10px;
}
.section4 ul li p {
    margin: 0 auto;
    padding: 40px 0;
}
.sec4-bottom {
    border-top: 1px solid #1E3A6E;
    padding-top: 40px;
    overflow: auto;
}
.sec4-btm-txt {
    padding-top: 40px;
}
.sec4-btm-txt p {
    margin: 0 auto;
}

/*section5*/
.sec5-img1 {
    width: 70%;
    max-width: 736px;
    background: #000;
    display: flex;
    justify-content: center;
}
.sec5-img1 img {
    max-width: 400px;
    max-height: 400px;
}
.sec5-top {
    display: flex;
    justify-content: space-between;
}

.sec5-top ul {
    width: 35%;
    margin-left: 30px;
}
.sec5-top ul li + li {
    padding-top: 30px;
}
.sec5-middle {
    padding-top: 50px;
}
.sec5-middle p {
    padding: 40px 0;   
}

.sec5-bottom {
    overflow: auto;
}


/*반응형*/
@media (max-width: 1250px) {
    .rsch-list {
        margin: 0 25px;
        margin-bottom: 50px;
    }
    section {
        margin: 0 25px !important;
    }
    /*section4*/
    .section4 ul {
        flex-direction: column;
    }
    .section4 .black-bg {
        background: none;
    }
    .section4 img {
        width: 100%;
        max-width: 718px;
    }
    .sec4-bottom img {
        max-width: auto;
    }
    .section4 p {
        max-width: 718px;
    }
    /*section5*/
    .sec5-img1 {
        background: none;
    }
    .sec5-middle_ {
        overflow: auto;
    }

}

@media (max-width: 900px) {
    .rsch-list ul li {
        font-size: 16px;
    }
}

@media (max-width: 850px) {
    .rsch-list ul li .line {
        margin-left: 25px;
        margin-right: 20px;
    }

}

@media (max-width: 768px) {
    /*section1*/
    .rsch-list {
        /* padding: 20px 0; */
        align-items: flex-start;
    }
    .sec1-top ul {
        margin-left: 30px;
    }
    .sec1-top ul li {
        font-size: 12px;
        line-height: 1.5;
    }
    .rsch-list ul li .line {
        margin-left: 25px;
        margin-right: 20px;
        display: none;
    }
    .rsch-list ul + ul {
        padding: 0;
    }
    .rsch-list ul li + li {
        padding-top: 10px;
    }
    .rsch-list ul {
        width: 65%;
    }
    .sec1-top ul .txt2 {
        display: none;
    }
    .txt2_ {
        display: block;
        margin-top: 50px;
        font-size: 12px;
        line-height: 1.5;
    }
    /*section2*/
    .sec2-bottom .sec2-txt {
        margin: 40px 0;
    }
    /*section4*/
    .section4 .black-bg {
        min-height: auto;
    }
    /*section5*/
    .sec5-img1 {
        width: 100%;
        max-width: 400px;
        max-height: 400px;
        background: #000;
    }
    .sec5-top ul {
        width: 40%;
        font-size: 12px;
    }
    .sec5-middle_ {
        overflow: auto;
    }
}
@media (max-width: 690px) {
    .sec5-top {
        flex-direction: column;
    }
    .sec5-img1 {
        margin: 0 auto;
    }
}

@media (max-width: 500px) {
    /*section1*/
    section {
        /* margin: 0 20px !important; */
    }
    .sec1-top {
        flex-direction: column;
    }
    .sec1-top img {
        margin: 0 auto;
        max-width: inherit;
    }
    .sec1-top ul {
        width: 100%;
        margin: 0;
        margin-top: 30px;
    }
    .rsch-list {
        align-items: center;
    }
    .rsch-list ul {
        width: 100%;
    }
    .rsch-list ul li {
        font-size: 12px;
        justify-content: center;
    }
    .rsch-list ul li .line {
        display: none;
    }
    .rsch-list ul {
        flex-direction: column;
    }
    .rsch-list ul + ul {
        padding-top: 10px;
    }
    .rsch-list ul li + li {
        padding-top: 10px;
    }
    .txt2_ {
        margin-top: 30px;
    }
    /*section2*/
    .sec2-bottom .sec2-txt {
        margin: 30px 0;
    }
    /*section4*/
    .section4 img {
        width: auto;
        max-width: none;
        overflow: auto;
        min-height: 320px;
        min-width: 718px;
    }
    .sec4-img1 {
        overflow: auto;
    }
    .sec4-img2 {
        overflow: auto;
    }
    .section4 ul li p {
        padding: 30px 0;
    }
    .sec4-bottom {
        padding-top: 30px;
    }
    .sec4-btm-txt {
        padding-top: 30px;
    }
    /*section5*/
    .sec5-img1 img {
        width: 100%;
    }
    .sec5-top ul {
        width: 100%;
        margin: 0;
    }
    .sec5-top ul li:nth-child(1) {
        padding-top: 30px;
    }
    .sec5-middle {
        padding-top: 30px;
    }
    .sec5-middle p {
        padding: 30px 0;
    }
}